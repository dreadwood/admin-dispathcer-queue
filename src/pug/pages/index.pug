block data
  -
    title = "Rx2Go â€” Dispathcer queue page"

    const pages = [
      { name: "Confirm photo", url: "confirm-photo.html", img: "/preview/confirm-photo@2x.jpg" },
      { name: "Barcode rejected 1", url: "barcode-rejected-1.html", img: "/preview/barcode-rejected-1@2x.jpg" },
      { name: "Barcode rejected 2", url: "barcode-rejected-2.html", img: "/preview/barcode-rejected-1@2x.jpg" },
      { name: "Barcode rejected 3", url: "barcode-rejected-3.html", img: "/preview/barcode-rejected-1@2x.jpg" },
      { name: "Wrong geoposition", url: "wrong-geoposition.html", img: "/preview/wrong-geoposition@2x.jpg" },
      { name: "An unusual problem", url: "unusual-problem.html", img: "/preview/unusual-problem@2x.jpg" },
      { name: "Modal 1", url: "modal-1.html", img: "/preview/modal-1@2x.jpg" },
      { name: "Modal 2", url: "modal-2.html", img: "/preview/modal-2@2x.jpg" },
      { name: "Viewer", url: "viewer.html", img: "/preview/viewer@2x.jpg" },
    ]

block content
  style.
    @import url('https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap');
    body {
      --color-main: #4682b4;
      --color-bg: #ffffff;
      --color-title: #162854;
      --color-text: #4d5156;
      padding: 20px 40px;
      font-family: "Lato", sans-serif;
      font-size: 16px;
      line-height: 22px;
      font-weight: 400;
      color: var(--color-text);
      background-color: var(--color-bg);
    }
    h1 {
      font-size: 22px;
      line-height: 29px;
      font-weight: 700;
      color: var(--color-title);
      text-transform: uppercase;
    }
    h2 {
      font-size: 20px;
      line-height: 26px;
      margin: 0;
      margin-top: 20px;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    a:visited {
      color: var(--color-text);
    }
    a:hover,
    a:focus {
      color: var(--color-main);
    }
    a span { color: gray; }
    .list {
      margin-top: 16px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(295px, 1fr));
      gap: 30px 20px;
    }
    .item {
      text-align: center;
      text-decoration: none;
      cursor: pointer;
    }
    .item:hover .item__img {
      transform: scale(1.05);
    }
    .item__img {
      display: block;
      object-fit: cover;
      width: 100%;
      aspect-ratio: 16 / 9;
      margin-bottom: 6px;
      border-radius: 10px;
      border: 1px solid lightgray;
      transition-timing-function: ease-out;
      transition-duration: 0.2s;
      transition-property: transform;
    }
    .item__suptitle {
      color: gray;
    }

  h1=title

  h2 Pages
  .list
    each it in pages
      - const path = it.img.split("@")[0];
      - const format = it.img.split(".")[1];
      a.item(href=it.url)
        picture
          img.item__img(class=classname
            src=image
            srcset=`${path}@2x.${format} 2x`
            width=width
            height=height
            alt=altText
          )
        =it.name
        .item__suptitle=it.url
