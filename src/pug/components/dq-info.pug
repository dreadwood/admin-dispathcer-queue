        .dq-info__delivery-warning No-contact Delivery
        | Do NOT attempt face-to-face delivery, Leave package at door and snap a photo.
    div
      .dq-info__label Type:
      button.dq-info__btn-time
        +svg({ name: "icon-time-check", width: 16, height: 16 })
        ="Next day special time window"
    .dq-info__delivery-cols
      .dq-info__delivery-field
        .dq-info__label Created:
        | 06:45 PM 01/01/2023
      .dq-info__delivery-field
        .dq-info__label ETA:
        | 11:01 AM - 02:01 PM 01/01/2023
    div
      .dq-info__label Special instruction:
      .dq-info__delivery-uppermaps APT 1, CALL PT, RING BELL, LEAVE BEHIND PLANTS  ON PORCH IF NA
    .dq-info__map
      img(src="/img/map-person.jpg" width="329" height="219" alt="")
      .dq-info__map-legend
        +dq-legend({})


mixin dq-info-contact-btn({ text })
