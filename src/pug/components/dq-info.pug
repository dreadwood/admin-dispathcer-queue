mixin dq-info-package-item({ text, icon })
  .dq-info__package-item
    +svg({ name: icon, width: 16, height: 16 })
    =text

mixin dq-info-package({})
  .dq-info__package.dq-info__field
    .dq-info__title Package info
    .dq-info__package-col
      .dq-info__label Items: #[span.dq-info__package-num 1]
      .dq-info__label Rate: #[span.dq-info__package-price $10]
    .dq-info__label Subtype:
    .dq-info__package-list
      +dq-info-package-item({ text: "Keep in Fridge", icon: "icon-label-snowflake" })
      +dq-info-package-item({ text: "Confidential", icon: "icon-label-invisible" })
      +dq-info-package-item({ text: "Sensitive", icon: "icon-label-feather" })


mixin dq-info({ isSmall })
  .dq-info
    .dq-info__top
      +dq-info-param({ text: "#19245347" })
      +dq-info-param({ text: "BROOKLYN-2" })
    +dq-info-drive({})
    +dq-info-client({})
    if !isSmall
      .dq-info__bottom
        +dq-info-delivery({})
        .dq-info__bottom-rows
          +dq-info-contact({})
          +dq-info-package({})
