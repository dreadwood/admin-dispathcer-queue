include /elements/images
include /components/button/dq-btn-icon
include /components/dq-legend

mixin dq-info-param({ text })
  .dq-info__param
    =text
    +svg({ name: "icon-clipboard", width: 18, height: 18 })


mixin dq-info-drive({})
  .dq-info__drive.dq-info__field
    .dq-info__drive
      .dq-info__person
        img(src="/img/placeholder-driver.jpg" width="38" height="38" alt="")
        .dq-info__person-label
          +svg({ name: "icon-raiting-star", width: 12, height: 12 })
          | 4.8
      .dq-info__drive-data
        .dq-info__drive-count Hired: #[b 87d]
        .dq-info__label Driver:
        button.dq-info__drive-name
          | Akhtamov Umid
          +svg({ name: "icon-clipboard", width: 16, height: 16 })
        button.dq-info__number
          | 219224680
          +svg({ name: "icon-clipboard", width: 16, height: 16 })
      .dq-info__drive-contols
        +dq-btn-icon({ text: "Call the driver", icon: "icon-chat-phone", color: "blue" })
        +dq-btn-icon({ text: "@paulth", icon: "icon-telegram", color: "gray" })


mixin dq-info-client-btn({ text, icon, isBtn, classname })
  if isBtn
    button.dq-info__client-btn(class=classname)
      if icon
        +svg({ name: icon, width: 16, height: 16 })
      =text
      +svg({ name: "icon-clipboard", width: 16, height: 16 })
  else
    a.dq-info__client-btn(class=classname href="#")
      if icon
        +svg({ name: icon, width: 16, height: 16 })
      =text
      +svg({ name: "icon-clipboard", width: 16, height: 16 })


